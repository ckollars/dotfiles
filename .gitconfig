# Christopher Kollars git settings derived from Jerod Santo ( http://github.com/jerodsanto/dotfiles ). 

[user]
  name = Christopher Kollars
  email = ckollars@gmail.com

[core]
  # Use custom `.gitignore` and `.gitattributes`
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[alias]
    # Basic commands
    a = add
    b = branch
    aa = add --all
    ci = commit
    amend = commit --amend
    co = checkout
    
    # View the current working tree status using the short format
    s = status -s
    
    # Switch to a branch, creating it if necessary
    
    # Show verbose output about tags, branches or remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -vgo = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

  
[apply]
  whitespace = fix

[push]
  default = current

[color]
  branch = auto
  diff = auto
  status = auto
  
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
